{
  "manifest_version": 3,
  "name": "Red Sidebar Extension",
  "version": "1.0",
  "description": "Adds a red sidebar to the left side of the page",
  "permissions": [
    "activeTab",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "http://localhost:3000/*"
      ],
      "js": [
        "content.bundle.js"
      ],
      "run_at": "document_start",
      "persistent": true
    },
    {
      "matches": [
        "http://localhost:3000/*"
      ],
      "js": [
        "localhost_content.bundle.js"
      ],
      "run_at": "document_start"
    }
  ]
}